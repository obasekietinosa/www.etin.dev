---
import "../styles/global.css";
// Remove ThemeToggle if we are forcing a look or refactoring it.
// For now, I'll keep it but it might need to be restyled or removed if we are strictly dark mode.
// The spec says "Light/Dark theme system... persisted via localStorage" in memory,
// BUT the new spec mainly details Dark Mode.
// I will keep the toggle functionality but ensure the default is Dark.
import ThemeToggle from "../components/ThemeToggle.astro";
import CookieBanner from "../components/CookieBanner.astro";
import ImageModal from "../components/ImageModal.astro";

// Import new fonts
import "@fontsource/inter-tight/400.css";
import "@fontsource/inter-tight/600.css";
import "@fontsource/inter-tight/700.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/playfair-display/400.css";
import "@fontsource/playfair-display/400-italic.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Etin Obaseki",
  description = "Software Engineer.",
  image = "/og/site.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Matomo -->
    <script is:inline>
      var _paq = (window._paq = window._paq || []);
      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(["requireCookieConsent"]);
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);
      (function () {
        var u = "//analytics.etin.dev/";
        _paq.push(["setTrackerUrl", u + "matomo.php"]);
        _paq.push(["setSiteId", "1"]);
        var d = document,
          g = d.createElement("script"),
          s = d.getElementsByTagName("script")[0];
        g.async = true;
        g.src = u + "matomo.js";
        s.parentNode.insertBefore(g, s);
      })();
    </script>
    <!-- End Matomo Code -->

    <script is:inline>
      // Initialize theme - Default to Dark if not set
      const theme = localStorage.getItem("theme");
      // If theme is specifically 'light', use light. Otherwise (null or 'dark'), use dark.
      if (theme === "light") {
        document.documentElement.classList.remove("dark");
        document.documentElement.classList.add("light");
      } else {
        document.documentElement.classList.remove("light");
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>
  <body class="bg-background text-foreground antialiased relative min-h-screen selection:bg-accent selection:text-accent-foreground transition-colors duration-200">
    <div class="bg-noise"></div>
    <!-- Main Container per spec: max-w-5xl, padding scaling -->
    <div class="relative z-10 mx-auto max-w-5xl px-6 md:px-12 lg:px-16 py-20 md:py-28 lg:py-40">
      <nav class="flex justify-between items-center mb-20 md:mb-32">
         <a href="/" class="text-xl font-bold tracking-tight hover:text-accent transition-colors">Etin Obaseki</a>
         <ThemeToggle />
      </nav>
      <slot />
      <footer class="mt-32 pt-16 border-t border-border">
        <div class="grid md:grid-cols-2 gap-12">
           <div>
             <h3 class="text-2xl font-bold mb-4">Etin Obaseki</h3>
             <p class="text-muted-foreground">Engineer; capable of great abstraction.</p>
           </div>
           <div class="flex justify-start md:justify-end gap-8">
              <a href="https://github.com/obasekietinosa" class="text-muted-foreground hover:text-accent transition-colors font-mono uppercase text-sm tracking-wider">Github</a>
              <a href="https://threads.com/e.t.i.n" class="text-muted-foreground hover:text-accent transition-colors font-mono uppercase text-sm tracking-wider">Threads</a>
              <a href="mailto:me@etin.dev" class="text-muted-foreground hover:text-accent transition-colors font-mono uppercase text-sm tracking-wider">Email</a>
           </div>
        </div>
        <div class="mt-16 text-xs text-muted-foreground font-mono">
          &copy; {new Date().getFullYear()} Etin Obaseki. Designed with Bold.
        </div>
      </footer>
    </div>
    <CookieBanner />
    <ImageModal />
  </body>
</html>
