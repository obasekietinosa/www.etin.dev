---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import ProjectPreview from "../components/ProjectPreview.astro";
import { getProjects } from "../domains/Projects";

const projects = await getProjects();
---

<Layout title="Projects">
  <main>
    <section class="px-0 md:px-4">
      <header class="pt-8 text-center text-primary mb-8">
        <h1 class="text-5xl font-bold">Projects</h1>
        <p class="mt-4 text-2xl font-extralight">
          I aspire to regularly do cool things and talk about them here.
          Here is a complete list of my projects.
        </p>
        <hr class="border-primary border-2 mt-12 mb-8" />
      </header>
      <Card>
        <div class="my-12 space-y-12">
            {projects.map((project) => <ProjectPreview project={project} />)}
        </div>
      </Card>
    </section>
  </main>
</Layout>
