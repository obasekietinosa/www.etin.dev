---
import type { Note } from "../../domains/Notes";
import Badge from "../Badge.astro";
import cx from "clsx";

interface Props {
  note: Note;
}

const { note } = Astro.props;
---

<li class="group block py-8 border-t border-border first:border-t-0">
  <a href={`/note/${note.slug}`} class="block">
    <div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-4 mb-2">
      <h3 class="text-2xl md:text-3xl font-bold font-sans tracking-tight group-hover:text-accent transition-colors">
        {note.title}
      </h3>
      <div class="flex flex-wrap gap-2 shrink-0">
        {note.tags.map((tag) => <Badge key={tag.name} {...tag} />)}
      </div>
    </div>
    <p class="text-lg text-muted-foreground leading-relaxed max-w-3xl">
      {note.preview}
    </p>
    <div class="mt-4 text-sm font-mono text-accent uppercase tracking-wider opacity-0 group-hover:opacity-100 transition-opacity transform translate-y-2 group-hover:translate-y-0 duration-300">
      Read Article &rarr;
    </div>
  </a>
</li>
