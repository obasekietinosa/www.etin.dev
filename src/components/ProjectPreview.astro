---
import type { Project } from "../domains/Projects";
import Badge from "../components/Badge.astro";
import Button from "../components/Button.astro";
import cx from "clsx";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="group grid md:grid-cols-2 gap-8 md:gap-12 pb-16 md:pb-24 border-b border-border last:border-0 items-center">
  <!-- Image Column -->
  <div class="relative aspect-video overflow-hidden bg-muted">
     <img
      class="h-full w-full object-cover grayscale transition-all duration-500 group-hover:grayscale-0 group-hover:scale-105"
      src={project.image}
      alt={`Screenshot of ${project.title}`}
    />
  </div>

  <!-- Content Column -->
  <div class="flex flex-col items-start">
    <div class="mb-4">
      <Badge {...project.status} />
    </div>

    <h3 class="text-3xl md:text-4xl font-bold font-sans tracking-tight mb-4 group-hover:text-accent transition-colors">
      <a href={`/project/${project.slug}`}>
        {project.title}
      </a>
    </h3>

    <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
      {project.description}
    </p>

    <Button variant="primary" href={`/project/${project.slug}`}>
      View Project
    </Button>
  </div>
</div>
