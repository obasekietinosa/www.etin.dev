---
import Button from "../Button.astro";

const { remainingCount } = Astro.props;
const moreRolesCount = typeof remainingCount === "number" ? remainingCount : 0;
const showMoreButton = moreRolesCount > 0;
const experienceLabel = `experience${moreRolesCount === 1 ? "" : "s"}`;
---

<div class="space-y-0">
  <slot />

  {showMoreButton && (
    <div class="mt-8 md:ml-[25%] pt-8">
      <Button variant="secondary" href="/experiences" class="w-full md:w-auto">
        View {moreRolesCount} more {experienceLabel}
      </Button>
    </div>
  )}
</div>
